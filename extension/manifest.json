{
    "manifest_version": 3,
    "name": "ProcrastiNOT",
    "description": "We'll complete this blocker... NOW!",
    "version": "1.0",

    "background": {
        "service_worker": "background.js"
    },

    "permissions": [
        "tabs"
    ],

    "content_scripts": [
        {
            "js": ["content.js"],
            "matches": ["https://*/*", "http://*/*"]
        }
    ],

    "externally_connectable": {
        "matches": [
            "*://localhost/"
        ]
    }
}